@model ParkingManagement.Model.SignupModel
@{
    ViewBag.Title = "Index";
}

<link href="@Url.Content("~/Content/Signup.css")" rel="stylesheet" type="text/css" />

<h2> SignUp</h2>

@if (TempData["SignupErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["SignupErrorMessage"]
    </div>
}

@using (Html.BeginForm("Signup", "Signup", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", onchange = "checkEmail()" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <div id="email-error" style="color:red;"></div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Type)
        <div class="radio">
            <label>
                @Html.RadioButtonFor(m => m.Type, "1", new { @checked = "checked" }) Booking Counter Agent
            </label>
        </div>
        <div class="radio">
            <label>
                @Html.RadioButtonFor(m => m.Type, "2") Parking Zone Assistant
            </label>
        </div>
        @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary" id="signup">Sign Up</button>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @section scripts {
        @Scripts.Render("~/Scripts/Signup.js")
    }
}